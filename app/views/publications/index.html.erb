<div class="col-md-12">
  <h2 class="text-center">Publications </h2>
</div>
<div class="col-md-12">
	<% @publications.each do |publication|%>
	  <div class="articles col-lg-6 col-md-6 col-sm-6">
	  	<div class="wrap-image col-lg-12 col-md-12 col-sm-12">
				<div class="publication_image text-center">
					<%= link_to publication do %>
						<%= image_tag (publication.avatar_url), class: "img-responsive" if publication.avatar? %>
					<% end %>
				</div>

				<h4>
					<%= link_to publication.title, publication %>
				</h4>

				<div class="excerpt">
					<p><%= publication.short_description %></p>
	 			</div>

	 			<div class="buttons">
					<% if user_signed_in? %>
		    		<% if current_user.admin? %>
			        <%= link_to(edit_publication_path(publication)) do %>
			        	<i class="fa fa-pencil fa-2x edit" aria-hidden="true"></i>
			        <% end %>
			        <%= link_to(publication, method: :delete) do %>
			        	<i class="fa fa-trash-o fa-2x destroy" aria-hidden="true"></i>
			        <% end %>
			      <% end %>
			    <% end %>
	 			</div>
			</div>
	  </div>
	<% end %>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 text-center pagination">
  <%= will_paginate @publications %>
</div>
