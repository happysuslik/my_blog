<div class="panel panel-default">
  <div class="panel-heading">
  	<%= @publication.title %>
    <% if user_signed_in? %>
      <% if @author_user %>
        <%= link_to('Edit', edit_publication_path, class: "btn btn-warning") %>
      <% end %>
      <% if current_user.admin? %>
        <%= link_to('Delete', @publication, method: :delete, class: "btn btn-danger") %>
      <% end %>
    <% end %>
  </div>
  <div class="panel-body">
    <div class="publication_image">
    	<%= image_tag (@publication.avatar_url) if @publication.avatar? %>
    </div>
    <div><p><%= @publication.description %></p></div>
    <p class="count">Просмотренно: <%= @review %> раз</p>
	</div>
  <h1 class="text-center">Похожие статьи</h1>
  <div>
    <%= render 'carusel', collection: @random_publications %>
  </div>
  
</div>



