<% @users.each do |user| %>
	<% if !user.admin? %>
		<ul class="list-group mobile">
			<li class="col-lg-6 col-md-6 col-sm-6 email list-group-item">
				<%= user.email %>
			</li>
			<li class="col-lg-6 col-md-6 col-sm-6 list-group-item">
				<%= link_to(user, method: :delete, class: "mobile_user_#{user.id}") do %>
					<i class="fa fa-trash-o fa-2x destroy" aria-hidden="true"></i>
				<% end %>
			</li>
		</ul>

		<ul class="list-group desktop">
			<li class="col-lg-12 col-md-12 col-sm-12 email list-group-item">
				<span class="col-lg-6 col-md-6 col-sm-6 email text-center">
					<%= user.email %>
				</span>
				<span class="col-lg-6 col-md-6 col-sm-6">
					<%= link_to(user, method: :delete, class: "desktop_user_#{user.id}") do %>
						<i class="fa fa-trash-o fa-2x destroy" aria-hidden="true"></i>
					<% end %>
				</span>
			</li>
		</ul>


	<% end %>
<% end %>